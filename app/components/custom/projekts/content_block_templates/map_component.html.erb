<div class="js-content-block-template-content">
  <div class="js-leaflet-map" style="height: 400px; position: relative;" class="leaflet-container leaflet-touch leaflet-fade-anim leaflet-grab leaflet-touch-drag leaflet-touch-zoom" tabindex="0">
  </div>
  <script>
    var mapElement = document.currentScript.parent.closest(".js-leaflet-map");

    var map = L.map(mapElement).setView([], 12);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    L.marker([]).addTo(map)
      .bindPopup('Marker name')
      .openPopup();
  </script>
</div>
