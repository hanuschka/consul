<%= render(Resources::ListItemComponent.new(component_attributes)) do |c| %>
  <% c.header do %>
    <%= date_formated %>
  <% end %>

  <% if @projekt.related_sdgs.present? %>
    <% c.image_overlay_item do %>
      <%= render SDG::FilterLinksComponent.new(@projekt.related_sdgs, Projekt) %>
    <% end %>
  <% end %>

  <% c.additional_body_section do %>
    <div class="projekt-list-item--phases">
      <% projekt.current_phases.each do |phase| %>
        <a href="<%= projekt_phase_url_for(phase) %>" class="projekt-phase-link">
          <i class="fa <%= phase_icon_class(phase) %>"></i>
          <%= phase.title %>
        </a>
      <% end %>
    </div>
  <% end %>

  <% c.footer_section do  %>
   <%= link_to('Zum Projekt', projekt.page.url, class: 'button -grey') %>
  <% end %>
<% end %>
