<%= render(Shared::ResourceItem.new(component_attributes)) do |c| %>
  <% unless proposal.successful? %>
    <% c.first_footer_item do  %>
      <% if proposal.archived? %>
        <div class="padding text-center callout warning">
          <%= t("proposals.proposal.archived") %>
        </div>
      <% else %>
        <%= render Proposals::VotesComponent.new(@proposal, vote_url: vote_proposal_path(proposal, value: "yes")) %>
      <% end %>
    <% end %>
  <% end %>

  <% c.second_footer_item do  %>
    <%= t("proposals.proposal.supports", count: proposal.total_votes) %>
  <% end %>
<% end %>

