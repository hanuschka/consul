<div class="dropdown-container js-dropdown" data-name="<%= @name %>">
  <div class="dropdown-toggle js-dropdown-toggle click-dropdown">
    <%= selected_option.presence || options.first %>
  </div>
  <div class="dropdown-menu">
    <ul>
      <% options.each do |option| %>
        <li class="js-dropdown-item <%= @item_css_class %>" >
          <%= option %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
