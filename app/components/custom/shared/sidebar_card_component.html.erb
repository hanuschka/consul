<div class="sidebar-card <%= @class_name %>">
  <div class="sidebar-card--section">
    <% if @title.present? %>
      <h4 class="sidebar-card--title">
        <i class="fas fa-<%= @icon_name %>"></i>
        <div class="sidebar-card--title-text">
          <%= @title %>
        </div>
      </h4>
    <% end %>

    <% if @description.present? %>
      <div class="sidebar-card--description">
        <%= @description %>
      </div>
    <% end %>

    <%= content %>
  </div>

  <% if additional_sections.present? %>
    <% additional_sections.each do |additional_section| %>
      <div class="sidebar-card--separator"> </div>
      <div class="sidebar-card--section">
        <%= additional_section %>
      </div>
    <% end %>
  <% end %>
</div>
