<div class="vcmap-container">
  <%= map_div %>
  <div id="map-overlay" class="map-overlay">
    <button onclick="App.VCMap.zoom(window.vcsApp.maps.activeMap)">zoom in</button>
    <button onclick="App.VCMap.zoom(window.vcsApp.maps.activeMap, true)">zoom out</button>
  </div>
  <div id="controls" class="controls">
    <button onclick="App.VCMap.setActiveMap(window.vcsApp.maps, 'ol3')">2D</button>
    <button onclick="App.VCMap.setActiveMap(window.vcsApp.maps, 'cesium')">3D</button>
    <% if editable %>
      <button onclick="App.VCMap.drawFeature(window.vcsApp, vcs.GeometryType.Point)">draw point</button>
      <button onclick="App.VCMap.drawFeature(window.vcsApp, vcs.GeometryType.Polygon)">draw polygon</button>
    <% end %>
  </div>
</div>
