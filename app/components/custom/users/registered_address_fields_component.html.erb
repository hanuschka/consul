<div id="user-registered-address-fields">
  <div class="row">
    <div class="column">
      <%= label_tag :form_registered_address_city_id, t("custom.devise_views.users.registrations.new.form_registered_address_city_label") %>
      <%= select_tag :form_registered_address_city_id, options_for_select(options_for_city_select, @selected_city_id), {
          prompt: t("custom.helpers.select.prompt_city"),
          class: "js-registered-address-choose show-arrow #{"is-invalid-input" if highlight_error?(@selected_city_id)}",
          style: "background-color:#f8f8f8;"
        } %>

      <div id="registered-address-street-field" style="display: <%= selected_city.present? ? "block" : "none" %>">
        <%= label_tag :form_registered_address_street_id, t("custom.devise_views.users.registrations.new.form_registered_address_street_label") %>
        <%= select_tag :form_registered_address_street_id, options_for_select(options_for_street_select, @selected_street_id), {
            prompt: t("custom.helpers.select.prompt_street"),
            class: "js-registered-address-choose show-arrow #{"is-invalid-input" if highlight_error?(@selected_street_id)}",
            style: "background-color:#f8f8f8;"
          } %>
      </div>

      <div id="registered-address-field" style="display: <%= (selected_city.present? && selected_street.present?) ? "block" : "none" %>">
        <%= label_tag :form_registered_address_id, t("custom.devise_views.users.registrations.new.form_registered_address_label") %>
        <%= select_tag :form_registered_address_id, options_for_select(options_for_address_select, @selected_address_id), {
            prompt: t("custom.helpers.select.prompt_address"),
            class: "js-registered-address-choose show-arrow #{"is-invalid-input" if highlight_error?(@selected_address_id)}",
            style: "background-color:#f8f8f8;"
          } %>
      </div>
    </div>
  </div>
</div>
