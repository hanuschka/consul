<% provide :title do %>
  <%= t("admin.header.title") %> - <%= t("admin.menu.legislation") %> - <%= @process.title %> - <%= t("admin.legislation.draft_versions.index.title") %>
<% end %>

<div class="legislation-draft-versions-index">

  <%= back_link_to polymorphic_path([@namespace, :legislation_processes]), t("admin.legislation.processes.edit.back") %>

  <h2><%= @process.title %></h2>

  <%= render "admin/legislation/processes/subnav", process: @process, active: "draft_versions" %>

  <div class="small-12 column">
    <%= render "admin/legislation/draft_versions/new_button" %>

    <%= render "admin/legislation/draft_versions/list" %>
  </div>
</div>
