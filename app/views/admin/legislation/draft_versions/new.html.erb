    <div class="small-12 column">
      <%= back_link_to polymorphic_path([@namespace, @process.projekt_phase], action: :legislation_process_draft_versions),
                       t("admin.legislation.draft_versions.new.back") %>
      <h3><%= t("admin.legislation.draft_versions.new.title") %></h3>
    </div>
  </div>

  <%= render "admin/legislation/draft_versions/form", url: polymorphic_path([@namespace, @process, :draft_versions]) %>
