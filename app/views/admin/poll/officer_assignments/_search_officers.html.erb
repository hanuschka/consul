<div class="small-12 medium-6 margin-top">
  <%= form_tag(polymorphic_path([@namespace, @poll, :officer_assignments], action: :search_officers), method: :get, remote: true) do |f| %>
    <div class="input-group">
      <%= text_field_tag :search,
                         @search,
                         placeholder: t("admin.shared.search.label.poll_officers"), id: "search-officers" %>
      <div class="input-group-button">
        <%= submit_tag t("admin.shared.search.search"), class: "button" %>
      </div>
    </div>
  <% end %>
</div>

<div id="search-officers-results"></div>
