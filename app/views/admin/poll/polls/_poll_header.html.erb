<%= link_to t("admin.polls.edit.title"),
            polymorphic_path([@namespace, @poll], action: :edit),
            class: "button hollow float-right" %>

<h2 class="inline-block">
  <%= @poll.name %>
</h2>

<div class="clear"></div>

<div class="callout highlight">
  <div class="inline-block">
    <strong><%= t("admin.polls.index.dates") %></strong>
    <br>
    <%= l @poll.projekt_phase.start_date.to_date if @poll.projekt_phase.start_date %> - <%= l @poll.projekt_phase.end_date&.to_date if @poll.projekt_phase.end_date %>
  </div>

  <% if @poll.geozone_restricted %>
    <div class="inline-block margin-left">
      <strong><%= t("admin.polls.index.geozone_restricted") %></strong>
      <br>
        <%= @poll.geozones.pluck(:name).to_sentence %>
      </div>
  <% end %>
</div>
