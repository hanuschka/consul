<%= render "shared/filter_subnav", i18n_namespace: "admin.users.index" %>

<% if @users.any? %>
  <h3><%= page_entries_info @users %></h3>

  <table>
    <thead>
      <tr>
        <% if @current_filter == "erased" %>
          <th scope="col"><%= t("admin.users.columns.id") %></th>
          <th scope="col"><%= t("admin.users.columns.erase_reason") %></th>
          <th scope="col"><%= t("admin.users.columns.unique_stamp") %></th>
          <th scope="col"><%= t("custom.admin.users.columns.geozone") %></th>
          <th scope="col"><%= t("admin.users.columns.verified_at") %></th>

        <% elsif @current_filter == "outside_bam" %>
          <th scope="col"><%= t("cli.admin.users.columns.first_name") %></th>
          <th scope="col"><%= t("cli.admin.users.columns.last_name") %></th>
          <th scope="col"><%= t("cli.admin.users.columns.street_name") %></th>
          <th scope="col"><%= t("cli.admin.users.columns.house_number") %></th>
          <th scope="col"><%= t("cli.admin.users.columns.post_code") %></th>
          <th scope="col"><%= t("cli.admin.users.columns.city_name") %></th>
          <th scope="col"><%= t("cli.admin.users.columns.bam_letter_verification_code") %></th>
          <th scope="col"><%= t("cli.admin.users.columns.bam_letter_verification_code_sent_date") %></th>
          <th scope="col"><%= t("cli.admin.users.columns.action") %></th>

        <% else %>
          <th scope="col"><%= t("admin.users.columns.name") %></th>
          <th scope="col"><%= t("admin.users.columns.email") %></th>
          <th scope="col"><%= t("custom.admin.users.columns.first_name") %></th>
          <th scope="col"><%= t("custom.admin.users.columns.last_name") %></th>
          <th scope="col"><%= t("custom.admin.users.columns.street_name") %></th>
          <th scope="col"><%= t("custom.admin.users.columns.street_number") %></th>
          <th scope="col"><%= t("custom.admin.users.columns.plz") %></th>
          <th scope="col"><%= t("custom.admin.users.columns.geozone") %></th>
          <th scope="col"><%= t("custom.admin.users.columns.city_name") %></th>
          <th scope="col"><%= t("custom.admin.users.columns.gender") %></th>
          <th scope="col"><%= t("custom.admin.users.columns.date_of_birth") %></th>
          <th scope="col"><%= t("admin.users.columns.document_number") %></th>
          <th scope="col"><%= t("admin.users.columns.roles") %></th>
          <th scope="col"><%= t("admin.users.columns.unique_stamp") %></th>
          <th scope="col"><%= t("custom.admin.users.columns.verified_at") %></th>
          <th scope="col"><%= t("custom.admin.users.columns.actions") %></th>

        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <%= render 'admin/users/user_row', user: user %>
      <% end %>
    </tbody>
  </table>

  <%= paginate @users %>
<% else %>
  <div class="callout primary">
    <%= t("admin.users.index.no_users") %>
  </div>
<% end %>
