<%= render "shared/filter_subnav", i18n_namespace: "admin.users.index" %>

<% if @users.any? %>
  <h3><%= page_entries_info @users %></h3>

  <table>
    <thead>
      <tr>
        <% if @current_filter == "erased" %>
          <th scope="col"><%= t("admin.users.columns.id") %></th>
          <th scope="col"><%= t("admin.users.columns.erase_reason") %></th>
        <% else %>
          <th scope="col"><%= t("admin.users.columns.name") %></th>
          <th scope="col"><%= t("admin.users.columns.email") %></th>

          <th scope="col"><%= t("cli.admin.users.columns.pfo_first_name") %></th>
          <th scope="col"><%= t("cli.admin.users.columns.pfo_last_name") %></th>
          <th scope="col"><%= t("cli.admin.users.columns.pfo_street_name") %></th>
          <th scope="col"><%= t("cli.admin.users.columns.pfo_street_number") %></th>
          <th scope="col"><%= t("cli.admin.users.columns.pfo_plz") %></th>
          <th scope="col"><%= t("cli.admin.users.columns.pfo_city") %></th>
          <th scope="col"><%= t("cli.admin.users.columns.gender") %></th>
          <th scope="col"><%= t("cli.admin.users.columns.date_of_birth") %></th>

          <th scope="col"><%= t("admin.users.columns.document_number") %></th>
          <% if extended_feature?("verification.manual_verifications")  %>
            <th scope="col"><%= t("custom.admin.users.columns.first_name") %></th>
            <th scope="col"><%= t("custom.admin.users.columns.last_name") %></th>
            <th scope="col"><%= t("custom.admin.users.columns.street_name") %></th>
            <th scope="col"><%= t("custom.admin.users.columns.street_number") %></th>
            <th scope="col"><%= t("custom.admin.users.columns.plz") %></th>
            <th scope="col"><%= t("custom.admin.users.columns.city_name") %></th>
            <th scope="col"><%= t("custom.admin.users.columns.document_last_digits") %></th>
          <% else %>
            <th scope="col"><%= t("admin.users.columns.document_number") %></th>
          <% end %>

          <th scope="col"><%= t("custom.admin.users.columns.gender") %></th>
          <th scope="col"><%= t("custom.admin.users.columns.date_of_birth") %></th>
          <th scope="col"><%= t("admin.users.columns.roles") %></th>
          <th scope="col"><%= t("admin.users.columns.verification_level") %></th>

          <% if extended_feature?("verification.manual_verifications")  %>
            <th scope="col"><%= t("custom.admin.users.columns.actions") %></th>
          <% end %>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <% if @current_filter == "erased" %>
            <td><%= link_to user.id, user_path(user), target: "_blank" %></td>
            <td><%= user.erase_reason %></td>
          <% else %>
            <td><%= link_to user.name, user_path(user), target: "_blank" %></td>
            <td><%= user.email %></td>

            <td><%= user.pfo_first_name %></td>
            <td><%= user.pfo_last_name %></td>
            <td><%= user.pfo_street_name %></td>
            <td><%= user.pfo_street_number %></td>
            <td><%= user.pfo_plz %></td>
            <td><%= user.pfo_city %></td>
            <td><%= t("cli.gender.#{user.gender}") if user.gender.present? %></td>
            <td><%= l user.date_of_birth.to_date if user.date_of_birth.present? %></td>

            <td><%= user.document_number %></td>
            <td><%= display_user_roles(user) %></td>
            <td><%= user.user_type %></td>
          <% end %>
        </tr>
        <%= render 'admin/users/user_row', user: user %>
      <% end %>
    </tbody>
  </table>

  <%= paginate @users %>
<% else %>
  <div class="callout primary">
    <%= t("admin.users.index.no_users") %>
  </div>
<% end %>
