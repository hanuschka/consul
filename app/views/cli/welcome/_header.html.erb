<% if header.present? %>
  <%header_large = Widget::Card.header.find_by title: "header_large" %>
  <style>
    <%if header_large%>
      .home-page .jumbo{
        background-image: url("<%=header_large.image.attachment.url%>");
        background-size: cover;
        background-position: center 35%;
      }
    <%end%>
  </style>

  <div class="jumbo highlight">
    <div class="row">
      <div class="small-12 column <%= "medium-9 small" unless header.image.present? %>">
        <span class='welcome-hashtag'><%= sanitize(t('cli.welcome.hashtag')) %></span>
      </div>
    </div>
  </div>

<% end %>
