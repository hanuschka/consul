<div id=<%= dom_id(age_range) %> class="row" style="margin-bottom:20px">
  <div class="column medium-4">
    <%= t("custom.admin.age_ranges.name") %>
    <br>
    <%= age_range.name %>
  </div>
  <div class="column medium-3">
    <%= t("custom.admin.age_ranges.range") %>
    <br>
    <%= "#{age_range.min_age} - #{age_range.max_age}" %>
  </div>
  <div class="column medium-3">
    <%= t("custom.admin.age_ranges.order") %>
    <br>
    <%= age_range.order %>
  </div>
  <div class="column medium-2">
    <%= link_to t("custom.admin.age_ranges.buttons.edit"), edit_admin_age_range_path(age_range), class: "" %>
    <%= link_to t("custom.admin.age_ranges.buttons.destroy"), admin_age_range_path(age_range), class: "", method: :delete %>
  </div>
</div>
