<%= translatable_form_for([:admin, age_range]) do |f| %>
  <div class="row">
    <div class="column">
      <%= render "shared/errors", resource: age_range %>
      <%= render "shared/globalize_locales", resource: age_range %>
    </div>
  </div>

  <%= f.translatable_fields do |translations_form| %>
    <div class="row">
      <div class="column">
        <%= translations_form.text_field :name, autocomplete: "off" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="column medium-6">
      <%= f.text_field :min_age %>
    </div>

    <div class="column medium-6">
      <%= f.text_field :max_age %>
    </div>
  </div>

  <% if age_range.new_record? %>
    <div class="row">
      <div class="column medium-4">
        <%= f.check_box :only_for_stats %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="column medium-6 large-4">
      <%= f.submit %>
    </div>
  </div>
<% end %>
