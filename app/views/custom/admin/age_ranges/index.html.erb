<div class="row">
  <div class="small-12 column">
    <h2 class="inline-block"><%= t("custom.admin.age_ranges.index.title") %></h2>

    <%= link_to t("custom.admin.age_ranges.index.new"),
                new_admin_age_range_path,
                class: "button float-right" %>

    <%= render "shared/filter_subnav", i18n_namespace: "custom.admin.age_ranges.index" %>

    <% if @age_ranges.any? %>
      <table>
        <thead>
          <tr>
            <th scope="col"><%= t("custom.admin.age_ranges.table.name") %></th>
            <th scope="col"><%= t("custom.admin.age_ranges.table.range") %></th>
            <th scope="col"><%= t("admin.actions.actions") %></th>
          </tr>
        </thead>
        <tbody class="sortable" data-js-url="<%= order_records_admin_age_ranges_path %>">
          <% @age_ranges.each do |age_range| %>
            <tr id="<%= dom_id(age_range) %>" data-answer-id="<%= age_range.id %>">
              <td><%= age_range.name %></td>
              <td><%= "#{age_range.min_age} - #{age_range.max_age}" %></td>
              <td><%= render Admin::TableActionsComponent.new(age_range) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
