<div class="row">
  <div class="column">
    <h2><%= @investment.title %></h2>
  </div>
</div>

<%= render "custom/admin/budget_investments/nav_bar" %>

<div class="row margin-bottom">
  <div class="column">
    <div id="investment-state" class="margin-bottom">
      <%= render "custom/admin/budget_investments/investment_state", investment: @investment %>
      <%= link_to t("custom.admin.budget_investments.show.state_block_action_button_title"), "#", class: "button hollow", onclick: "$('#investment-state-form').toggle(); $('#investment-state').toggle();" %>
    </div>

    <div id="investment-state-form" class="margin-bottom" style="display: none;">
      <%= render "custom/admin/budget_investments/investment_state_form", investment: @investment %>
    </div>

    <div id="investment-details" class="margin-bottom">
      <%= render "custom/admin/budget_investments/investment_details", investment: @investment %>
      <%= link_to "Vorschlag bearbeiten", "#", class: "button hollow", onclick: "$('#investment-details-form').toggle(); $('#investment-details').toggle();" %>
    </div>

    <div id="investment-details-form" class="margin-bottom" style="display: none;">
      <%= render "custom/admin/budget_investments/investment_details_form", investment: @investment %>
    </div>
  </div>
</div>

<div class="row margin-bottom">
  <div class="column">
    <%= render "admin/memos/memos", memoable: @investment %>
  </div>
</div>
