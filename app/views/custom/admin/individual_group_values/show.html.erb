<div class="row">
  <div class="small-12 column">
    <%= back_link_to admin_individual_group_path(@individual_group) %>
    <h2><%= @individual_group_value.name %></h2>

    <div class="callout warning margin-bottom">
      <%= t("custom.admin.individual_group_values.show.csv_hint_html") %>
      <%= form_tag add_from_csv_admin_individual_group_value_path(@individual_group, @individual_group_value), multipart: true do %>
        <%= file_field_tag :file, style: "width:auto;" %>
        <%= submit_tag t("custom.admin.registered_addresses.index.import_button") %>
      <% end %>
    </div>

    <%= render "search_user" %>

    <div id="user-search-result"></div>

    <% if @related_users.any? %>
      <h3>
        <%= page_entries_info @related_users, entry_name: t("custom.admin.individual_group_values.show.related_users") %>
      </h3>
      <%= render Admin::IndividualGroupValues::RelatedUsersComponent.new(@related_users, @individual_group_value, id: "related-users") %>
      <%= paginate @related_users %>
    <% end %>

  </div>
</div>
