<%= f.fields_for phase_name.to_s do |phase_form| %>
  <tr class="projekt_phase_settings">
    <td>
      <%= t("custom.admin.projekts.edit.#{phase_name}") %>
    </td>
    <td>
      <%= phase_form.date_field :start_date, label: t("custom.admin.projekts.edit.start_date")  %>
    </td>
    <td>
      <%= phase_form.date_field :end_date, label: t("custom.admin.projekts.edit.end_date") %>
    </td>
    <td>
      <%= phase_form.check_box :active, { label: t("custom.admin.projekts.edit.activate") } %>
    </td>
  </tr>

  <tr class="projekt_phase_geozones">
    <td colspan="4">
      <div class="small-6 medium-6">
        <%= phase_form.check_box :geozone_restricted, { label: t("custom.admin.projekts.edit.geozone_restricted") , data: { checkbox_toggle: "#geozones_for_#{phase_name}" } } %>
      </div>

      <div id='<%= "geozones_for_#{phase_name}" %>' style="<%= projekt_phase.geozone_restricted? ? "" : "display:none" %>">
        <div class="row">
          <div class="clear">
            <%= phase_form.collection_check_boxes(:geozone_ids, @geozones, :id, :name) do |b| %>
              <div class="small-6 medium-3 geozone-check-box">
                <%= b.label do %>
                  <%= b.check_box + b.text %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    </td>
  </tr>
<% end %>
