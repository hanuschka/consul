<h2><%= @projekt.name %>  </h2>
<%= form_for(@projekt, url: admin_projekt_path, as: :projekt) do |f| %>

  <h2><%= t('custom.admin.projekts.index.projekt_list') %>  </h2>
  <table class='edit-projekt'>
    <thead>
      <th scope="col" class="small-3"><%= t("custom.admin.projekts.edit.phase_name") %></th>
      <th scope="col" class="small-3"><%= t("custom.admin.projekts.edit.beginning") %></th>
      <th scope="col" class="small-3"><%= t("custom.admin.projekts.edit.ending") %></th>
      <th scope="col" class="small-3"><%= t("custom.admin.projekts.edit.actions") %></th>
    </thead>
    <tbody>

      <tr class= <%= 'fieldset-disabled' unless @projekt.top_level?  %>>
        <td>
          <%= t("custom.admin.projekts.edit.projekt_duration") %>
        </td>
        <td>
          <%= f.date_field :total_duration_start, disabled: (true unless @projekt.top_level?), label: t("custom.admin.projekts.edit.start_date")  %>
        </td>
        <td>
          <%= f.date_field :total_duration_end, disabled: (true unless @projekt.top_level?), label: t("custom.admin.projekts.edit.end_date")  %>
        </td>
        <td>
          <%= f.check_box :total_duration_active, { label: t("custom.admin.projekts.edit.activate"), disabled: (true unless @projekt.top_level?) }  %>
        </td>
      </tr>

      <%= render partial: 'edit_projekt_phase', locals: { f: f, projekt_phase: @projekt.debate_phase, phase_name: 'debate_phase' } %>

      <%= render partial: 'edit_projekt_phase', locals: { f: f, projekt_phase: @projekt.proposal_phase, phase_name: 'proposal_phase' } %>

      <tr>
        <td>
          <%= t("custom.admin.projekts.edit.voting_phase") %>
        </td>
        <td colspan='3'>
          <%= link_to t("custom.admin.projekts.edit.voting_manage"), admin_polls_path  %>
        </td>
      </tr>
    </tbody>
  </table>

  <div class='projekt-options <%= 'fieldset-disabled' unless @projekt.top_level? %>' >
    <%= f.check_box :show_in_navigation, { label: t('custom.admin.projekts.edit.show_in_navigation_checkbox'), disabled: (true unless @projekt.top_level?) } %>
  </div>

  <div>
    <%= f.submit(t("custom.admin.projekts.edit.update"), class: "button success") %>
  </div>
<% end %>
