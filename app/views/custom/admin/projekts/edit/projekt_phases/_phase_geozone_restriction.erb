<div class="projekt-phase-geozone-restriction-selector margin-bottom <%= 'gray-labels' if skip_user_verification? %>">

  <%= phase_form.radio_button :geozone_restricted, 'no_restriction',
                             label: t('custom.geozones.sidebar_filter.restrictions.no_restriction' ),
                             checked: ( projekt.send(phase_name).geozone_restricted.blank? || projekt.send(phase_name).geozone_restricted == 'no_restriction' ),
                             disabled: skip_user_verification? %>
  <br>

  <%= phase_form.radio_button :geozone_restricted, 'only_citizens', label: t('custom.geozones.sidebar_filter.restrictions.only_citizens'),  disabled: skip_user_verification? %>
  <br>

  <%= phase_form.radio_button :geozone_restricted, 'only_geozones', label: t('custom.geozones.sidebar_filter.restrictions.only_geozones'), class: "#{phase_name}_only_geozones", disabled: skip_user_verification? %>

  <div class="projekt-phase-geozone-selector <%= phase_name %>">
    <%= phase_form.collection_check_boxes(:geozone_restriction_ids, Geozone.all, :id, :name, {}, { disabled: skip_user_verification? } ) do |b| %>
      <%= b.label(style: 'display:inline-block;cursor:pointer;') { b.check_box(style: 'margin-top:0;') + b.text } %>
    <% end %>
  </div>
  <br>

  <%= phase_form.radio_button :geozone_restricted, 'only_streets', label: t('custom.geozones.sidebar_filter.restrictions.only_streets'), class: "#{phase_name}_only_streets", disabled: skip_user_verification? %>

  <div class='projekt-phase-street-selector' data-phase-name=<%= phase_name %>>
    <div id="projekt-phase-selected-streets-<%= phase_name %>" class='projekt-phase-selected-streets'>
      <% projekt_phase.bam_streets.each do |street| %>
        <div class='selected-projekt' data-street-id=<%= street.id %>>
          <%= street.name %>
          <i class='fas fa-times js-deselect-street'></i>
        </div>
      <% end %>
    </div>

    <%= select_tag :streets, options_from_collection_for_select(BamStreet.all, :id, :name), class: 'js-select-street', prompt: 'Please select' %>

    <div class='hide'>
      <%= phase_form.collection_check_boxes :bam_street_ids, BamStreet.all, :id, :name %>
    </div>
  </div>
</div>
