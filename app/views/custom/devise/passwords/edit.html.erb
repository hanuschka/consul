<% provide :title do %><%= t("devise_views.passwords.edit.title") %><% end %>

<div class='login-form'>
  <div class='row'>
    <div class='column'>
      <h2><%= t("devise_views.passwords.edit.title") %></h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "shared/errors", resource: resource %>

    <%= f.hidden_field :reset_password_token %>

    <div class="row">
      <div class="small-12 column">
        <%= f.password_field :password, autofocus: true, autocomplete: "off",
                             label: t("devise_views.passwords.edit.password_label") %>
      </div>

      <div class="small-12 column">
        <%= f.password_field :password_confirmation, autocomplete: "off",
                             label: t("devise_views.passwords.edit.password_confirmation_label") %>
      </div>

      <div class="small-12 medium-6 small-centered column">
        <%= f.submit t("devise_views.passwords.edit.change_submit"), class: "button expanded" %>
      </div>
    </div>
  <% end %>

  <div class='row'>
    <div class='column'>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
