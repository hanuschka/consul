<% provide :title do %><%= t("devise_views.passwords.new.title") %><% end %>

<% if Setting.new_design_enabled? %>
  <%= render Auth::AuthPageTemplateComponent.new(title: t("devise_views.passwords.new.title")) do |c| %>
    <% c.with_form do %>
      <h2><%= t("devise_views.passwords.new.title") %></h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "shared/errors", resource: resource %>

        <div class="row">

          <p>
            Passwort vergessen?
            Bitte geben Sie Ihre E-Mail-Adresse an. Sie erhalten dann eine E-Mail mit einem Link, über den Sie ein neues Passwort wählen können.
          </p>

          <%= f.email_field :email, autofocus: true, placeholder: t("activerecord.attributes.user.email") %>
          <%= f.submit "Senden", class: "button expanded" %>
        </div>
      <% end %>
      <%#= render "devise/shared/links" %>
    <% end %>
  <% end %>
<% else %>
  <h2><%= t("devise_views.passwords.new.title") %></h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "shared/errors", resource: resource %>

    <div class="row">
      <div class="small-12 column">
        <%= f.email_field :email, autofocus: true, placeholder: t("activerecord.attributes.user.email") %>

        <div class="small-12 medium-6 small-centered">
          <%= f.submit t("devise_views.passwords.new.send_submit"), class: "button expanded" %>
        </div>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>
