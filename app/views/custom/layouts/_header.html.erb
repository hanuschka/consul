<header>
  <div class="top-bar">

    <h2 class='header-title'>Bürgerbeteiligung der Stadt Bamberg</h2>

    <span data-responsive-toggle="responsive-menu"
          data-hide-for="medium"
          class="hamburger-menu focusable js-toggle-mobile-menu js-prevent-key-scroll"
          role="button"
          tabindex="0"
          aria-haspopup="true"
          aria-expanded="false"
          aria-label='<%= t('custom.links.menu.mobile.menu_label') %>' >
      <span class="menu-icon dark" data-toggle></span>
    </span>

    <div class='header-right-group'>
      <div class="top-bar-title">
        <%= link_to root_path do %>
          <%= image_tag(image_path_for("logo_header.png"), class: "", alt: t("layouts.header.logo")) %>
        <% end %>
      </div>
    </div>

    <div id="responsive-menu">
      <div class="top-bar-right">
        <div class="show-for-small-only">
          <div class="subnavigation">

            <h2 class='city-name'>Bürgerbeteiligung der Stadt Bamberg</h2>

            <%= render partial: "shared/subnavigation", locals: { placement: 'mobile' } %>
            <div class="small-12 column">
              <%= render "shared/top_links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="navigation_bar" class="subnavigation expanded">
    <div class="hide-for-small-only">
      <%= render partial: "shared/subnavigation", locals: { placement: 'desktop' } %>
    </div>
  </div>
</header>
