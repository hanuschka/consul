<% launch_page ||= false %>

<%header_large = Widget::Card.header.find_by title: "header_large" %>
<style>
<% if header_large %>
  .top-bar-background-wrapper {
    max-width: 1445px;
    background-image: url("<%= polymorphic_path(header_large.image.attachment) %>");
    background-size: cover;
    background-position: top;
    margin: auto;
  }
<%end%>
</style>
<header>
  <div class="js-stiky-header top-bar-wrapper">
    <div class="top-bar-background-wrapper">
      <div class="top-bar">
        <span data-responsive-toggle="responsive-menu"
              data-hide-for="medium"
              class="hamburger-menu header--mobile-hamburger-menu focusable js-toggle-mobile-menu js-prevent-key-scroll"
              role="button"
              tabindex="0"
              aria-haspopup="true"
              aria-expanded="false"
              aria-label='<%= t('custom.links.menu.mobile.menu_label') %>' >
              <span class="menu-icon dark" data-toggle></span>
        </span>

        <div class="top-bar--title">
          <%= link_to root_path do %>
            <%= image_tag(image_path_for("logo_header_new.png"), alt: setting["org_name"], class: 'top-bar--title-logo-top') %>
            <%= image_tag(image_path_for("logo_header_new_sticky.png"), alt: setting["org_name"], class: 'top-bar--title-logo-stikcy') %>
          <% end %>
        </div>

        <div class="header--navigation expanded not-print">
          <div class="hader--subnavigation-wrapper hide-for-small-only">
            <%= render partial: "shared/subnavigation", locals: { placement: 'desktop', launch_page: launch_page } %>
          </div>

          <% if !launch_page && current_user.nil? %>
            <div class='header--account-buttons show-on-desktop'>
              <%= link_to t('devise_views.menu.login_items.login'), new_user_session_path, class: 'sign-in-button', role: 'button' %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="header--responsive-menu-wrapper">
        <div id="responsive-menu" class='header--responsive-menu not-print'>
          <div class="top-bar-right">
            <div class="subnavigation">
              <div class="header--responsive-menu-title">
                <div>
                  <%= Setting['extended_option.general.title'] %>
                </div>
                <div>
                  <b><%= Setting["extended_option.general.subtitle"] %></b>
                </div>
              </div>

              <% if !launch_page && current_user.nil? %>
                <div class='show-on-mobile header--responsive-menu-sign-in-section'>
                  <%= link_to t('devise_views.menu.login_items.login'), new_user_session_path, class: 'header--responsive-menu-sign-in-button', role: 'button' %>
                </div>
              <% end %>

              <%= render partial: "shared/subnavigation", locals: { placement: 'mobile', launch_page: launch_page } %>
              <div class="small-12 column">
                <%= render "shared/top_links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
