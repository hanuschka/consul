<h2><%= t("officing.residence.new.title") %></h2>

<%= form_for @residence, as: "residence", url: officing_residence_path do |f| %>
  <div class="row verification account">
    <div class="small-12 medium-6 column">
        <%= render "errors" %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 medium-6 column">
      <%= f.text_field :first_name, label: t('activerecord.attributes.user.first_name'), placeholder: t("custom.sign_up.user_details.first_name_placeholder")  %>
    </div>

    <div class="small-12 medium-6 column">
      <%= f.text_field :last_name, label: t('activerecord.attributes.user.last_name'), placeholder: t("custom.sign_up.user_details.last_name_placeholder")  %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 column">
      <%= f.text_field :postal_code, label: t('activerecord.attributes.user.plz'), placeholder: t("custom.sign_up.user_details.plz_placeholder")  %>
    </div>
  </div>

  <div class="row">
    <div class="user-document column">
      <div class="user-document-type">
        <%= f.select :document_type, user_document_types, prompt: "" %>
      </div>

      <div class="user-document-number">
        <%= f.text_field :document_number,
                         placeholder: t("officing.residence.new.document_number"),
                         autocomplete: "off" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="user-date-of-birth small-12 column">
      <%= f.date_select :date_of_birth,
                        label: t('activerecord.attributes.user.date_of_birth'),
                        prompt: true,
                        start_year: 1900, end_year: minimum_required_age.years.ago.year %>
    </div>
  </div>



	<div class='row margin-bottom'> 

    <div class='column'>
			<label><%= t('custom.sign_up.user_details.tips') %></label>
    </div>

		<div class='column small-12 medium-6'>
			<label><%= t('custom.sign_up.user_details.card_label') %></label>
			<p><%= t('custom.sign_up.user_details.card_help') %></p>
			<%= image_tag 'card.jpg' %>     
		</div>

		<div class='column small-12 medium-6'>
			<label><%= t('custom.sign_up.user_details.pass_label') %></label>
			<p><%= t('custom.sign_up.user_details.pass_help') %></p>
			<%= image_tag 'pass_new.png' %> 
		</div>
	</div>

  <div class="small-12 medium-6">
    <input type="submit" value="<%= t("officing.residence.new.submit") %>" class="button expanded">
  </div>
<% end %>
