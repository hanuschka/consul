<div class="custom-page-content" id='page-content'>
  <% if @custom_page&.projekt&.new_content_block_mode? %>
    <%= render Projekts::ContentBlockTemplatesSelectorComponent.new %>

    <div class="custom-page-content-inner">
      <div class="content-blocks-container">
        <% if @custom_page.projekt.content_blocks.any? %>
          <% @custom_page.projekt.content_blocks.order(:position).each do |content_block| %>
            <div class="projekt-content-block-wrapper">
              <div class="relative">
                <div class="projekt-content-block " data-id="<%= content_block.id %>">
                  <%= content_block&.body&.html_safe %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% else %>
    <%= auto_link_already_sanitized_html AdminWYSIWYGSanitizer.new.sanitize(@custom_page.content) %>
  <% end %>
</div>

<% if @custom_page.print_content_flag %>
  <%= render "/shared/print" %>
<% end %>

<% if @cards.any? %>
  <%= render "shared/cards", cards: @cards %>
<% end %>
