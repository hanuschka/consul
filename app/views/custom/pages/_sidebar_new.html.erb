<aside class="sidebar">
  <% show_admin_controlls = (
    current_user&.email.in?(@partner_emails) ||
    (current_user&.administrator? || (current_user&.projekt_manager? && can?(:edit, resource)))) %>

  <% show_admin_controlls_and_embeded = show_admin_controlls && embedded? %>

  <% if show_admin_controlls && !embedded? %>
    <%= render Shared::SidebarCardComponent.new(title: t("custom.projekts.page.sidebar.admin_controls.title"), icon_name: "cog") do |c| %>
      <%= render partial: 'pages/sidebar/admin_controls' %>
    <% end %>
  <% end %>

  <% content_block_sidebar_name = "projekt_sidebar_#{projekt.id}" %>
  <% if render_custom_projekt_content_block?(content_block_sidebar_name, projekt) %>
    <%= render Shared::SidebarCardComponent.new(title: t("custom.projekts.page.sidebar.projekt_information.title"), icon_name: "info-circle", class_name: "js-sidebar-projekt-info") do |c| %>
      <%= render_custom_block content_block_sidebar_name %>
    <% end %>
  <% end %>

  <%= render(Mobile::FixedBottomActionComponent.new) do %>
    <div id="sidebar-cta" class="<%= 'hide' unless projekt_feature?(projekt, 'sidebar.new_resource_button_in_sidebar') %>">
      <%= render Pages::Projekts::SidebarCtaComponent.new(@default_projekt_phase) %>
    </div>
  <% end %>

  <div class="hide-on-small-tablet width-100">
    <% other_conditions_for_phases_section_are_met = (
        projekt.total_duration_start.present? || projekt.total_duration_end.present?) &&
       projekt.projekt_phases.active.any?
    %>
  <% if (projekt_feature?(projekt, "sidebar.show_phases_in_projekt_page_sidebar") &&
      other_conditions_for_phases_section_are_met)
    %>
      <%= render Projekts::WrapSectionWithSettingDataComponent.new(enable: show_admin_controlls_and_embeded, setting_key: "projekt_feature.sidebar.show_phases_in_projekt_page_sidebar", setting_active: projekt_feature?(projekt, "sidebar.show_phases_in_projekt_page_sidebar"), other_conditions_are_met: other_conditions_for_phases_section_are_met) do %>
        <%= render Shared::SidebarCardComponent.new(title: t("custom.projekts.page.sidebar.phases.title"), icon_name: "pager") do |c| %>
          <%= render Pages::Projekts::SidebarPhasesComponent.new(projekt) %>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <% if projekt.sdg_goals.any? || show_admin_controlls_and_embeded %>
    <%= render Shared::SidebarCardComponent.new(title: t("custom.projekts.page.sidebar.sdgs.title"), icon_name: "tag") do |c| %>
      <% if show_admin_controlls_and_embeded %>
        <%= form_for(@projekt, html: { data: {resource: "projekt", id: @projekt.id}, class: "js-update-projekt-form"}) do |f| %>
          <%= render SDG::SimpleEditSelectorComponent.new(f) %>
        <% end %>
      <% else %>
        <div class="big-sdgs-list">
          <%= render SDG::TagListComponent.new(projekt) %>
        </div>
      <% end %>
    <% end %>
  <% end %>

  <% if projekt.tags.category.any? || show_admin_controlls_and_embeded %>
    <%= render Shared::SidebarCardComponent.new(title: t("custom.projekts.page.sidebar.tags.title"), icon_name: "tag") do |c| %>
      <% if show_admin_controlls_and_embeded %>
        <%= form_for(@projekt, html: { data: {resource: "projekt", id: @projekt.id}, class: "js-update-projekt-form"}) do |f| %>
          <%= render Categories::SimpleEditSelectorComponent.new(f) %>
        <% end %>
      <% else %>
        <%= render partial: 'pages/sidebar/tags', locals: { projekt: projekt } %>
      <% end %>
    <% end %>
  <% end %>

  <% if projekt_feature?(projekt, 'sidebar.show_map') || show_admin_controlls_and_embeded %>
    <%= render Projekts::WrapSectionWithSettingDataComponent.new(enable: show_admin_controlls_and_embeded, setting_key: "projekt_feature.sidebar.show_map", setting_active: projekt_feature?(projekt, 'sidebar.show_map')) do %>
      <%= render Shared::SidebarCardComponent.new(title: t("custom.projekts.page.sidebar.map.title"), icon_name: "map", opened_on_mobile: true) do |c| %>
        <%= render Pages::Projekts::SidebarMapComponent.new(projekt, @default_phase_name) %>
      <% end %>
    <% end %>
  <% end %>

  <% if projekt_feature?(projekt, "sidebar.show_navigator_in_projekts_page_sidebar") || show_admin_controlls_and_embeded %>
    <%= render Projekts::WrapSectionWithSettingDataComponent.new(enable: show_admin_controlls_and_embeded, setting_key: "projekt_feature.sidebar.show_navigator_in_projekts_page_sidebar", setting_active: projekt_feature?(projekt, "sidebar.show_navigator_in_projekts_page_sidebar")) do %>
      <%= render Shared::SidebarCardComponent.new(title: t("custom.projekts.page.sidebar.navigator.title"), icon_name: "list-alt") do |c| %>
        <%= render partial: 'pages/sidebar/projekt_list', locals: { projekts: Projekt.where(id: projekt.top_parent.id).includes([page: :translations], :projekt_settings), current_projekt: projekt } %>
      <% end %>
    <% end %>
  <% end %>

  <% if @projekt_subscription.present? && projekt_feature?(@custom_page.projekt, "sidebar.show_notification_subscription_toggler") || show_admin_controlls_and_embeded %>
    <%= render Projekts::WrapSectionWithSettingDataComponent.new(enable: show_admin_controlls_and_embeded, setting_key: "projekt_feature.sidebar.show_notification_subscription_toggler", setting_active: projekt_feature?(@custom_page.projekt, "sidebar.show_notification_subscription_toggler")) do %>
      <%= render Shared::SidebarCardComponent.new(title: t("custom.projekts.page.sidebar.phases_subscription.title"), icon_name: "bell") do |c| %>
        <%= render partial: "pages/sidebar/projekt_phase_subscriptions", locals: { projekt_subscription: @projekt_subscription } %>
      <% end %>
    <% end %>
  <% end %>

  <% if projekt_feature?(projekt, "sidebar.projekt_page_sharing") || show_admin_controlls_and_embeded %>
    <%= render Projekts::WrapSectionWithSettingDataComponent.new(enable: show_admin_controlls_and_embeded, setting_key: "projekt_feature.sidebar.projekt_page_sharing", setting_active: projekt_feature?(projekt, "sidebar.projekt_page_sharing")) do %>
      <%= render Shared::SidebarCardComponent.new(title: t("custom.projekts.page.sidebar.share.title"), icon_name: "share-alt") do |c| %>
        <%= render "shared/social_share",
          title: projekt.page.title,
          url: url_for(only_path: false),
          description: strip_tags(projekt.page.content || '')[0..200] + '...',
          mobile: projekt.page.title
        %>
      <% end %>
    <% end %>
  <% end %>
</aside>
