<% projekts.each do |projekt| %>
  <%  current_projekt_class = current_projekt == projekt ? 'current-projekt' : ''  %>

  <ul class='projekt-navigator'>
    <li class="projekt-navigator <%= current_projekt_class %>">
      <%= prepare_projekt_name(projekt) %>
    </li>

    <% if projekt.children.any? %>
      <%= render partial: 'pages/sidebar/projekt_list', locals: { projekts: projekt.children, current_projekt: current_projekt } %>
    <% end %>
  </ul>
<% end %>
