<div class="sidebar-divider"></div>

<h2 class="sidebar-title"><%= t("custom.projekt.page.sidebar.navigator.title") %></h2>

<% if show_archived_projekts_in_sidebar? && Projekt.top_level_active_projekt_for_page_sidebar.any? && Projekt.top_level_archived_projekt_for_page_sidebar.any? %>
  <div class='sidebar-projekt-group-name'>
		<%= t("custom.projekts.sidebar_filter.title_active") %>
  </div>
<% end %>

<%= render partial: 'pages/sidebar/projekt_list', locals: { projekts: Projekt.top_level_active_projekt_for_page_sidebar, current_projekt: projekt } %>

<% if show_archived_projekts_in_sidebar? && Projekt.top_level_archived_projekt_for_page_sidebar.any? %>

  <div class='sidebar-projekt-group-name'>
    <%= t("custom.projekts.sidebar_filter.title_archived") %>
  </div>
  <%= render partial: 'pages/sidebar/projekt_list', locals: { projekts: Projekt.top_level_archived_projekt_for_page_sidebar, current_projekt: projekt } %>
<% end %>
