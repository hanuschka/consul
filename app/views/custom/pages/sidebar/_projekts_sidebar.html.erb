<% if Setting["projekts.projekt_page_sharing"].present? && projekt.page && projekt.page.published? %>
  <%= render "shared/social_share",
      share_title: t("custom.pages.social_share.share"),
      title: projekt.page.title,
      url: url_for(only_path: false),
      description: strip_tags(projekt.page.content),
      mobile: projekt.page.title
  %>
<% end %>

<% if Setting["projekts.show_phases_in_projekt_page_sidebar"].present? %>
  <%= render partial: 'pages/sidebar/projekt_phases', locals: { projekt: projekt } %>
<% end %>

<% if Setting["projekts.show_navigator_in_projekts_page_sidebar"].present? %>
  <%= render partial: 'pages/sidebar/projekts_navigator', locals: { projekt: projekt } %>
<% end %>
