<% if current_user && proposal_limit_exceeded?(current_user) %>
  <div class='max-proposals-exceeded'>
    <%= t('custom.proposals.index.max_number_reached', max_number: Setting['extended_option.proposals.max_active_proposals_per_user']) %>
  </div>
<% else %>
  <% if current_user.nil? || Projekt.top_level.selectable_in_selector(@current_tab_phase&.resources_name || controller_name, current_user).any? %>
    <%= link_to t("proposals.index.start_proposal"), new_proposal_path(projekt: @selected_parent_projekt), class: "button expanded js-preselect-projekt" %>
  <% else %>
    <%= link_to t("custom.proposals.index.no_active_projekt"), '#', class: "button expanded disabled-no-active-projekt", disabled: true %>
  <% end %>
<% end %>
