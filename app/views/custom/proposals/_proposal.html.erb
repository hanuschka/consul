<% cache [locale_and_user_status(proposal), "index", proposal, proposal.projekt, proposal.image, proposal.author, params[:tags], params[:projekts], params[:geozone_affiliation], params[:affiliated_geozones], params[:geozone_restriction], params[:restricted_geozones]] do %>

  <div id="<%= dom_id(proposal) %>" class='row collapse resource-n proposal margin-bottom' data-equalizer='main' data-equalize-on="medium">
    <div class='columns'>
      <div class='column projekt-info show-for-small-only' style="background-color:<%= proposal.projekt.color %>;color:<%= pick_text_color(proposal.projekt.color) %>" >
        <%= render partial: 'proposals/proposal/projekt_bar', locals: {proposal: proposal} %>
      </div>
    </div>

    <div class='columns small-12 medium-3 large-2 image-container show-for-small-only'>
      <% if proposal.image.present? && !proposal.image.concealed? %>
        <%= image_tag proposal.image_url(:large), alt: proposal.image.title.unicode_normalize %>
      <% end %>
    </div>

    <div class='columns small-12 medium-3 large-2 image-container show-for-medium' data-equalizer-watch='main'>
      <% if proposal.image.present? && !proposal.image.concealed? %>
        <%= image_tag proposal.image_url(:thumb_wider), alt: proposal.image.title.unicode_normalize %>
      <% end %>
    </div>

    <div class='columns small-12 medium-9 large-10 details' data-equalizer-watch='main'>
      <div class='column projekt-info show-for-medium' style="background-color:<%= proposal.projekt.color %>;color:<%= pick_text_color(proposal.projekt.color) %>" >
        <%= render partial: 'proposals/proposal/projekt_bar', locals: {proposal: proposal} %>
      </div>
      <div class='resource-info' data-equalizer='details'>
        <div class='column small-12 medium-6 large-8 resource-details' data-equalizer-watch='details'>
          <h4 class='resource-name'><%= link_to proposal.title, namespaced_proposal_path(proposal) %></h4>
          <div class="resource-summary margin-bottom">
            <%= auto_link_already_sanitized_html simple_format(proposal.summary) %>
            <div class="truncate"></div>
          </div>
          <%= render "shared/tags", taggable: proposal, limit: 5 %>

        </div>
        <div class='column small-12 medium-6 large-4 resource-participate table' data-equalizer-watch='details'>
          <div class='table-cell align-middle'>
            <% if show_proposal_votes? %>
              <div id="<%= dom_id(proposal) %>_votes"
                   class="small-12 medium-10 small-centered column supports-container">
                <% if proposal.successful? %>
                  <div class="padding">
                    <div class="supports text-center">
                      <%= render "proposals/supports", proposal: proposal %>
                    </div>
                  </div>
                <% elsif proposal.archived? %>
                  <div class="padding text-center">
                    <strong><%= t("proposals.proposal.supports", count: proposal.total_votes) %></strong>
                    <p><%= t("proposals.proposal.archived") %></p>
                  </div>
                <% else %>
                  <%= render "proposals/votes",
                            { proposal: proposal, vote_url: vote_proposal_path(proposal, value: "yes") } %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
