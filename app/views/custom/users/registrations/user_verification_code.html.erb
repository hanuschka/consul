<% provide :title do %><%= t("devise_views.users.registrations.new.title") %><% end %>

<% form_html = capture do %>
  <h2><%= t("custom.sign_up.common.register") %></h2>

  <%= render "sign_up_progress_bar" %>

  <h4><%= t("custom.sign_up.user_verification_code.title") %></h4>

  <p><%= t("custom.sign_up.user_verification_code.description") %></p>

  <%= form_for(@user, url: check_user_verification_code_path(@user)) do |f| %>
    <%= render "shared/errors", resource: @user %>

    <div class="row">
      <div class="small-12 medium-6">
        <%= f.text_field :bam_letter_verification_code, placeholder: t("custom.sign_up.user_verification_code.bam_letter_verification_code_placeholder"), value: nil %>
      </div>
    </div>

    <div class="small-12 medium-4 margin-top margin-bottom-1">
      <%= f.submit t("custom.sign_up.user_verification_code.submit"), class: "button expanded", style: "max-width:300px;" %>
    </div>
  <% end %>
<% end %>

<% if Setting.new_design_enabled? %>
  <%= render Auth::AuthPageTemplateComponent.new do |c| %>
    <% c.with_form do %>
      <%= form_html %>
    <% end %>
  <% end %>
<% else %>
  <%= form_html %>
<% end %>
