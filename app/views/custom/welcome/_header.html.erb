<% if header.present? %>
  <%header_large = Widget::Card.header.find_by title: "header_large" %>
  <style>
    <%if header_large%>
      .home-page .jumbo{
        background-image: url("<%=header_large.image.attachment.url%>");
        background-size: cover;
        background-position: center 25%;
      }
    <%end%>
  </style>

  <div class="jumbo highlight">
    <div class="row">
      <div class="column beta-badge-wrapper">
        <%= link_to '#beta' do  %>
          <%= image_tag 'badge.png', class: 'beta-badge', size: '150x150' %>
        <% end %>
      </div>


      <div class='jumbo-message column'>
        <h1>Die Smart City MG mitgestalten</h1>
      </div>
    </div>
  </div>

  <div class="background-header"></div>
<% end %>
