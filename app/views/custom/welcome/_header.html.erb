<% if header.present? %>
  <%header_large = Widget::Card.header.find_by title: "header_large" %>
  <style>
    <%if header_large%>
      .home-page .jumbo{
        background-image: url("<%=header_large.image.attachment.url%>");
        background-size: cover;
        background-position: center 25%;
      }
    <%end%>
  </style>

  <div class="jumbo not-print">
    <div class="beta-badge-wrapper">
      <%= link_to '#beta' do  %>
        <%= image_tag 'badge.png', class: 'beta-badge' %>
      <% end %>
    </div>
  </div>
<% end %>
