<% if header.present? %>
  <%header_large = Widget::Card.header.find_by title: "header_large" %>
  <style>
    <%if header_large%>
      .home-page .jumbo{
        background-image: linear-gradient(90deg, 
                            rgba(34, 34, 34, 0.75) 35%, 
                            rgba(34, 34, 34, 0.65) 50%,
                            rgba(34, 34, 34, 0.0)),
                          url("<%=header_large.image.attachment.url%>");
        background-size: cover;
        background-position: center 25%;
      }
    <%end%>
  </style>

  <div class="jumbo highlight">
    <div class="row">
      <div class="column">
      </div>
    </div>
  </div>

  <div class="background-header"></div>
<% end %>
