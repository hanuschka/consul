<% date = projekt.total_duration_end.present? ? "Noch #{(projekt.total_duration_end - Date.today).to_i.days} Tage" : nil %>
<%= render(Shared::ResourceItem::Component.new(title: projekt.page.title, description: projekt.description, tags: projekt.tags.first(3), image_url: projekt.image&.variant(:medium))) do |c| %>
  <% c.additional_body do %>
    <div class="projekt-phase-link">
      <i class="far fa-lightbulb"></i>
      Aktive Vorschlagsphase
    </div>
    <div class="projekt-phase-link">
      <i class="far fa-lightbulb"></i>
      Aktive Kommentarphase
    </div>
  <% end %>

  <% c.first_footer_item do  %>
   <%= link_to('Zum Projekt', projekt.page.url, class: 'button -grey') %>
  <% end %>
<% end %>
