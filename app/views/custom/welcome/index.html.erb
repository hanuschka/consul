<% content_for :body_class, "home-page" %>

<% content_for :canonical do %>
  <%= render "shared/canonical", href: root_url %>
<% end %>

<% if has_banners? %>
  <%= render "shared/banner" %>
<% end %>

<% provide :social_media_meta_tags do %>
  <%= render "shared/social_media_meta_tags",
              social_url: root_url %>
<% end %>

<%= render "header", header: @header %>

<main>

  <div class='row'>
    <div class='official-logo-wrapper'>
      <%= svg_tag "official_logo", class: 'official-logo' %>
    </div>
  </div>

  <%= render "feeds" %>

  <div class='row clear'>
    <div class='small-12 medium-9 column'>
      <%=render_custom_block 'home_page_welcome' %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 medium-9 column">
      <% page = SiteCustomization::Page.find_by slug: "indexdt" %>
      <% if page %>
        <h4 class="welcometitle"><%= page.title %></h4>
        <%= auto_link_already_sanitized_html AdminWYSIWYGSanitizer.new.sanitize(page.content) %>
      <% end %>
    </div>
  </div>

  <section class='intro'>
    <div class='container'>
      <div class='intro-content'>
        <h1>Die Zukunft braucht Deine Ideen</h1>
        <%=render_custom_block 'home_page_1' %>
      </div>
    </div>
  </section>

  <section>
    <div class='container green'>
      <div class='content-image'>
        <%= image_tag 'discutieren.png' %>
      </div>
      <div class='content'>
        <h1>Tausche dich aus</h1>
        <%=render_custom_block 'home_page_2' %>
        <%= link_to debates_path do %>
          <button type="button" class='red'>diskutiere mit</button>
        <% end %>
      </div>
    </div>
  </section>

  <% if feature?("user.recommendations") && (@recommended_debates.present? || @recommended_proposals.present?) %>
    <%= render "recommended",
                recommended_debates: @recommended_debates,
                recommended_proposals: @recommended_proposals %>
  <% end %>
</main>