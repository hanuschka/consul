<% content_for :body_class, "home-page" %>

<%= render "shared/canonical", href: root_url %>
<%= render "shared/social_media_meta_tags", social_url: root_url %>
<%= render "layouts/meta_tags" %>
<%= render "layouts/common_head", default_title: setting["org_name"] %>
<%= render "layouts/header" %>
  


<main class='row'>
  <!-- <video></video> -->

  <div class='video-container'>
    <iframe width="100%" src="https://www.youtube-nocookie.com/embed/-JFJD2F5XWU" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
  </div>

  <section class='intro'>
    <div class='container'>
      <div class='intro-content'>
        <h1>Deine Zukunft, Deine Politik.</h1>
        <%=render_custom_block 'home_page_1' %>
      </div>
    </div>
  </section>

  <section>
    <div class='container green'>
      <div class='content-image'>
        <%= image_tag 'discutieren.png' %>
      </div>
      <div class='content'>
        <h1>Tausche dich aus</h1>
        <%=render_custom_block 'home_page_2' %>
        <%= link_to "/debates?projekts=150" do %>
          <button type="button" class='red'>diskutiere mit</button>
        <% end %>
      </div>
    </div>
  </section>


  <section>
    <div class='container red'>
      <div class='content-image'>
        <%= image_tag 'vorschlaege.png' %>
      </div>
      <div class='content'>
        <h1>Zeige deine Ideen</h1>
        <%=render_custom_block 'home_page_3' %>
        <%= link_to proposals_path do %>
          <button type="button" class='green'>mach Vorschl√§ge</button>
        <% end %>
      </div>
    </div>
  </section>

  <section>
    <div class='container purple'>
      <div class='content-image'>
        <%= image_tag 'umfragen.png' %>
      </div>
      <div class='content'>
        <h1>Stimme ab</h1>
        <%=render_custom_block 'home_page_4' %>
        <%= link_to polls_path do %>
          <button type="button" class='red'>zur Abstimmung</button>
        <% end %>
      </div>
    </div>
  </section>

  <section>
    <div class='container questions'>
      <div class='intro-content'>
        <h1>Noch Fragen?</h1>
        <div class=questions-content>
          <%=render_custom_block 'home_page_5' %>
          <%= link_to '/faq' do %>
            <button type="button" class='red'>hier findest du Antworten</button>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</main>
<div class="footer">
  <%= render "custom/layouts/footer" %>
</div>
