<td style="<%= css_for_mailer_content %>">

  <h1 style="<%= css_for_mailer_heading %>">
    <%= @investment.title  %>
  </h1>

  <p style="<%= css_for_mailer_text %>">
    <%= t("mailers.budget_investment_unfeasible.hi") %>
  </p>

  <p style="<%= css_for_mailer_text %>">
    <%= t("mailers.budget_investment_unfeasible.thank_you", budget_name: @investment.budget.name) %>
  </p>

  <p style="<%= css_for_mailer_text %>">
    <%= t("mailers.budget_investment_unfeasible.rejected") %>
  </p>

  <p style="<%= css_for_mailer_text %>">
    <%= t("mailers.budget_investment_unfeasible.reject_reason") %>
  </p>

  <p style="<%= css_for_mailer_text + css_for_mailer_quote %>">
    <%= @investment.unfeasibility_explanation %>
  </p>

  <p style="<%= css_for_mailer_text %>">
    <%= t("mailers.budget_investment_unfeasible.next_steps") %>
  </p>

  <p style="<%= css_for_mailer_text %>">
    <%= t("mailers.budget_investment_unfeasible.sincerely") %>
  </p>
</td>
